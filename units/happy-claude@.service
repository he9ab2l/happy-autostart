[Unit]
Description=Happy Claude Session (YOLO) (%i)
After=happy-daemon@%i.service network-online.target
Wants=happy-daemon@%i.service network-online.target

[Service]
Type=simple
User=%i
EnvironmentFile=-/etc/happy-autostart/%i.env
WorkingDirectory=/
Environment=TERM=xterm-256color
ExecStart=/usr/bin/script -q -c "/usr/local/bin/happy" /dev/null
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
